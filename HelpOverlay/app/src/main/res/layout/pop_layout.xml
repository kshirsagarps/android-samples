<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay">


    <TextView
        android:id="@+id/overlay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overlay_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/overlay_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overlay_message"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/overlay_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"/>

    <Button
        android:id="@+id/overlay_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_below="@id/overlay_message"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:text="OK"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/joy_red"/>

</RelativeLayout>